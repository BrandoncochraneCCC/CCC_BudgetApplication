@model Application.ViewModels.ResourceAllocation
@{
    ViewBag.Title = "Resource Allocation";
}


@{
    <div class="container col-lg-12">
        <div class="container col-lg-12">
            <h2 class="col-lg-4">@Model.Header</h2>
        </div>            
        <div class="col-lg-12">
            <div class="col-lg-5">
                <div class="col-lg-8">Percentage of Resources Allocated</div>
                <div class="col-lg-4">@Html.EditorFor(m => Model.Percentage)</div>
            </div>
            <div class="col-lg-1"></div>

            <div class="col-lg-3">
                <div class="col-lg-6">Grand Total</div>
                <div class="col-lg-2">@Html.DisplayFor(m => Model.Total)</div>
            </div>
            <div class="col-lg-3"></div>

        </div>
    </div>
    <div class="col-lg-12" style="overflow:auto;">
        <div class="col-lg-2">
                <div class="col-lg-10">
                    <button type="button" class="btn btn-default" style="width:100%;">@Html.ActionLink("Summary", "ProgramBudget")</button>
                </div>
                <div class="col-lg-10">
                    <button type="button" class="btn btn-default" style="width:100%;">@Html.ActionLink("Counselling", "Counselling")</button>
                </div>
                <div class="col-lg-10">
                    <button type="button" class="btn btn-default" style="width:100%;">@Html.ActionLink("Training", "Training")</button>
                </div>
            <div class="col-lg-10 btn-group" style="overflow:visible">
                <button type="button" class="btn btn-default" style="width:100%;">@Html.ActionLink("Family Violence", "FamilyViolence")</button>
                <ul class="dropdown-menu scrollable-menu" role="menu" style="margin:-1px;">
                    <li>@Html.ActionLink("RCMen", "RCMen", "ProgramBudget") </li>
                    <li>@Html.ActionLink("RCWomen", "RCWomen", "ProgramBudget") </li>
                    <li>@Html.ActionLink("YNA", "YNA", "ProgramBudget") </li>
                    <li>@Html.ActionLink("TFTB", "TFTB", "ProgramBudget") </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-10">
            @if (Model.Revenues != null)
            {
                <div class="col-lg-8">
                    <h4>Revenues</h4>
                    <table class="table">
                        @foreach (var item in Model.Revenues)
                {
                            @Html.Partial("~/Views/ProgramBudget/_AllocationTable.cshtml", item)
                        }

                    </table>
                </div>
                <br />

            }

            @if (Model.Expenses != null)
            {
                <div class="col-lg-8 ">
                    <h4>Expenses</h4>
                    <table class="table">
                        @foreach (var item in Model.Expenses)
                        {
                            @Html.Partial("~/Views/ProgramBudget/_AllocationTable.cshtml", item)
                        }
                    </table>
                </div>
                <br />
            }
        </div>
    </div>
    

}
