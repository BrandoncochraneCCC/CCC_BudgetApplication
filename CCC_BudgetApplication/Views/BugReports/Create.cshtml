@model Application.Models.BugReport
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    <input type="hidden" id="Date" name="Date" value="@DateTime.UtcNow" />
    <input type="hidden" id="Username" name="Username" value="Developer" />
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>BugReport</h4>
        <hr />
        <p><strong>Be as descriptive as possible when submitting a bug report.</strong><br />
            <i>What were you trying to do? What happened? What were you doing before? Did you get some sort of pop-up/error message, if so, what did it say?</i> </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-lg-offset-1 col-md-10">
                <p>Report:</p>
                <textarea type="text" class="form-control" id="Description" name="Description" maxlength="4000" rows="6" cols="100" style="text-align:left;"></textarea>
                <p style="float:right;"><span id="count"></span> / 300 characters</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-1">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript" charset="utf-8">
    $("#Description").keyup(function () {
        $("#count").text($(this).val().length);
    });
</script>