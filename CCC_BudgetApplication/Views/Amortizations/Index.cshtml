@model IEnumerable<Application.Models.Amortization>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pool.Name)
        </th>
        <th>
            Cost Balance
        </th>
        <th>
            Accumulated Amortization Balance
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Pool.Name, "Details", "Pools", new {Id = item.Pool.PoolID}, null )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PoolBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccumulatedAmortization)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AmortizationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AmortizationID }) 
        </td>
    </tr>
}

</table>
