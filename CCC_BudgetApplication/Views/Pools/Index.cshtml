@model IEnumerable<Application.Models.Pool>

@{
    ViewBag.Title = "Index";
}

<h2>@Html.ActionLink("Index", "AmortizationCost", "Amortization")
</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepreciationRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StraightLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "AmortizationCost", "Amortization", new { poolID = item.PoolID }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepreciationRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StraightLine)
        </td>
        <td>
            @item.Account.Name (ACCT# @item.AccountNum)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PoolID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PoolID }) 
        </td>
    </tr>
}

</table>
