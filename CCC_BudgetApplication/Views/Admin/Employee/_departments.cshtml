
@using (Html.BeginForm("CreateDepartment", "Admin", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Create New Department:</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-lg-2">
                @Html.Label("Department Name", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-4">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @placeholder = "Department Name" } })
                @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-2">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-4">
                @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control", @placeholder = "Department Name" } })
                @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" name="CreateDepartment" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
