
@model IEnumerable<SelectListItem>

@using (Html.BeginForm("CounsellingType", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5>Create Counselling Type</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-lg-2">
                @Html.Label("Counselling Type", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-4">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @placeholder = "Counselling Type" } })
                @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
            </div>
        </div>       
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" name="CounsellingType" value="Create" class="btn btn-default" />
            </div>
        </div>
}


