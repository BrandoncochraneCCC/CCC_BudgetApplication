
@model IEnumerable<SelectListItem>

@using (Html.BeginForm("programs", "Admin", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Create New Program:</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-lg-2">
                @Html.Label("Program Name", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-4">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control", @placeholder = "Program Name" } })
                @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-2">
                @Html.Label("Acronym", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-4">
                @Html.Editor("Acronym", new { htmlAttributes = new { @class = "form-control", @placeholder = "Program Acronym" } })
                @Html.ValidationMessage("Acronym", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-2">
                @Html.Label("Counselling Group", htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
            <div class="col-md-4">
                @Html.DropDownList("CounsellingGroupTypeID", Model, htmlAttributes: new { @class = "form-control", @placeholder = "choose one" })
                @Html.ValidationMessage("CounsellingGroupTypeID", "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" name="programs" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

